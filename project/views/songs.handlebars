<h3>Please select a song below to add the chords</h3>
<form id="addsongchord" action="/song_chords" method="post">
SONG Name:<select name="song_ID"> 
    <option disabled selected value> -- select an option -- </option>
        {{#each songs_drop}}
        <option value="{{song_ID}}">{{name}}</option>
        {{/each}}
        </select><br>

   Chord 1:<select name="c1"> 
    <option disabled selected value> -- select an option -- </option>
        {{#each chords_drop}}
        <option value="{{c_ID}}">{{name}}</option>
        {{/each}}
        </select><br>

    
     <input value="Submit" type="submit">
 </form>
<br>


<H3>Please see ALL Songs Below</H3>
<table>
    <thead> 
        <tr><th>Song Name</th> 
        <th>Artist Name</th> 
        <th>Chords</th>
    </tr></thead> 
    <tbody>
        {{#each songs}}
        <tr> 
        <td>{{song_name}}</td> 
        <td>{{artist}}</td> 
        <td>{{chords}}</td>
            <td><button onclick="deleteSong({{song_ID}})">Delete</button></td>
        </tr>
    {{/each}}
    </tbody>
</table>
    
                                                      
